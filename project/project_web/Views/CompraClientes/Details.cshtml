@model IEnumerable<project_web.Models.DbModels.CarritoCompras>


@{
    ViewData["Title"] = "Carrito de compras";
}

<h1>Carrito de compras</h1>
<hr/>
<br/>
<div>
  <div class="containerAr">
    <div class="tablesArea">
        <table id ="myTable" class="display">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Asiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Evento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.Asiento)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Evento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
                            
            <td>
                                <form asp-action="Delete">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="border-0 focus">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                            <line x1="4" y1="7" x2="20" y2="7" />
                                            <line x1="10" y1="11" x2="10" y2="17" />
                                            <line x1="14" y1="11" x2="14" y2="17" />
                                            <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                            <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                        </svg>
                          
                                        </button>
                                </form>
            </td>
        </tr>
}
    </tbody>
</table>
            <a asp-action="Index" class="btn btn-secondary">Atrás</a>
</div>
</div>
</div>
@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

    </script>
}