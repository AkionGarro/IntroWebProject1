@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - project_web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project_web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/normalize.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-+5rNJDVgxnrbeknmhXV2IyWFjK7V1Fk/15xpwZKjotE65w7iM2BZJmXBPjevhlbmPj7cLszpJ1gsgGWs0s8Ow==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/myStyles.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />

</head>
<body>
    <header class="headerStyles">


        <nav class="navbar navbar-expand-lg bg-body-tertiary ">
            <div class="container-fluid">
                <a class="navbar-brand links home" asp-area="" asp-controller="Home" asp-action="Index">TecTickets</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">


                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link links" asp-area="" asp-controller="DetallesEvento" asp-action="Index">Eventos Disponibles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link links" asp-area="" asp-controller="UserInfo" asp-action="Index">Perfil</a>
                            </li>
                        }


                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Worker"))
                        {
                        <li class="nav-item">
                            <a class="nav-link links" asp-area="" asp-controller="Compras" asp-action="Index">Boletería</a>
                        </li>
                        }
                        @if(SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
     

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle links" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Gestión Eventos
                            </a>

                            <ul class="dropdown-menu bg-color-navs">
                                <li>
                                    <a class="dropdown-item links" asp-area="" asp-controller="DetallesEvento" asp-action="Index">Registrar Entradas</a>
                                </li>
                                <li>
                                    <a class="dropdown-item links" asp-area="" asp-controller="Entradas" asp-action="Index">Entradas</a>
                                </li
                                <li>
                                    <a class="dropdown-item links" asp-area="" asp-controller="Eventoes" asp-action="Index">Eventos</a>
                                </li>
                                <li>
                                    <a class="dropdown-item links" asp-area="" asp-controller="TipoEventoes" asp-action="Index">Tipo de Evento</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle links" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Gestión Escenarios
                            </a>

                            <ul class="dropdown-menu bg-color-navs">
                                <li>
                                    <a class="dropdown-item links" asp-area="" asp-controller="Escenarios" asp-action="Index">Escenarios</a>

                                </li>
                                <li>
                                    <a class="dropdown-item links" asp-area="" asp-controller="TipoEscenarios" asp-action="Index">Tipos Escenarios</a>
                                </li>
                                <li>
                                    <a class="dropdown-item links" asp-area="" asp-controller="Asiento" asp-action="Index">Asientos</a>
                                </li>
                            </ul>
                        </li>

                            <li class="nav-item">
                                <a class="nav-link links" asp-area="" asp-controller="Roles" asp-action="Index">Gestión Usuarios</a>
                            </li>
                        }
                        
                    </ul>
                    <partial name="_LoginPartial"  />
    
                </div>
            </div>
        </nav>



                    
              
            
        
    </header>
    <div class="container container-carrousel">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footerArea">
      
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="mt-4"> 
                        &copy; 2023 TecTickets. Todos los derechos reservados.
