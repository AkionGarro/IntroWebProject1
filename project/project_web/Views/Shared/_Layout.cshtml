<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TecTickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project_web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/myStyles.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TecTickets</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="mydropdown">
                                <button class="mydropbtn">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Entradas" asp-action="Index">Entradas</a>
                                </button>
                            </div>
                          
                        </li>

                        <li class="nav-item">
                            <div class="mydropdown">
                                <button class="mydropbtn">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Eventoes" asp-action="Index">Eventos</a>
                                </button>
                                <div class="mydropdown-content">
                                    
                                    <a class="nav-link text-dark" asp-area="" asp-controller="TipoEventoes" asp-action="Index">Tipo de Evento</a>
                                </div>
                            </div>
                        </li>

                           


                        <li class="nav-item">
                        <div class="mydropdown">
                            <button class="mydropbtn">
                             
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Escenarios" asp-action="Index">Escenarios</a>
                            </button>
                            <div class="mydropdown-content">
                                
                                <a class="nav-link text-dark" asp-area="" asp-controller="TipoEscenarios" asp-action="Index">Tipos Escenarios</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Asientoes" asp-action="Index">Asientos</a>
                            </div>
                        </div>
                        </li>
  
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - project_web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
