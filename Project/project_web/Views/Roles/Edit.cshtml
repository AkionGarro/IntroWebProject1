@model project_web.Models.Roles.EditRoles

@{
    ViewBag.Title = "Edit";
}

<div id="page-container">
    <div id="content-wrap">


        <h2>Editar rol</h2>
        <hr />
        <form method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row mb-4">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </div>
            
            
          
            <div class="card">
                <div class="card-header">
                    <h2>Usuarios agregados</h2>
                </div>
                <div class="card-body" style="height:200px; overflow-y:scroll;margin-bottom:10px;">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at the moment</h5>
                    }
                </div>
                <div class="card-footer">
                    <a asp-controller="Roles" asp-action="EditUsersInRoles" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Agregar usuarios</a>

                </div>
            </div>
        </form>

    </div>
</div>
   