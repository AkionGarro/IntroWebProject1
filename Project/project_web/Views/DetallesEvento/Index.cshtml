@model IEnumerable<project_web.Models.DetallesEvento>

@{
    ViewData["Title"] = "Lista de los Eventos Activos";
    if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
            @TempData["Error"]
        </div>
    }
    if (TempData["Success"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
            @TempData["Success"]
        </div>
    }
}
<div id="page-container">
    <div id="content-wrap">

    <h1>Lista de los Eventos Activos</h1>
    <hr />


    <div class="tablesArea">
        <table id="myTable" class="display">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoEvento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoEscenario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Escenario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Localizacion)
                    </th>
                    <th>Actions</th>
                </tr>
             </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoEvento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoEscenario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Escenario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localizacion)
                </td>
                        <td>


                            <div class="d-flex flex-row gap-3 text-center ">
                                <div class="d-flex flex-column text-center align-items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                        <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"></path>
                                        <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"></path>
                                    </svg>
                                    <a class="text-decoration-none text-black" asp-action="Create" asp-route-id="@item.Id">See details</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
</div>

                    
@section Scripts{


    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ registros por página",
                    "zeroRecords": "Nada encontrado - disculpa",
                    "info": "Mostrando la página _PAGE_ de _PAGES_",
                    "infoEmpty": "No records available",
                    "infoFiltered": "(filtrado de _MAX_ registros totales)",
                    "search": 'Buscar',
                    "paginate": {
                        "next": "Siguiente",
                        "previous": "Anterior",
                    }
                }
            });
        });

        window.setTimeout(function () {
            $(".alert").fadeTo(500, 0).slideUp(500, function () {
                $(this).remove();
            });
        }, 5000);


    </script>



}

